{
    "version": "1.0.0-*",
    "description": "Using C# library in PHP code compiled by Peachpie",
    "buildOptions": {
        "compilerName": "php",
        "compile": "**/*.php",
        "emitEntryPoint": true,
        "debugType": "portable"
    },
    "dependencies": {
        "Peachpie.App": "0.4.0-*",
        "library" : "*"
    },
    "tools": {
        "Peachpie.Compiler.Tools": "0.4.0-*"
    },
    "frameworks": {
        "netcoreapp1.0": {
            "dependencies": {
                "Microsoft.NETCore.App": {
                    "type": "platform",
                    "version": "1.0.0"
                }
            }
        }
    }
}